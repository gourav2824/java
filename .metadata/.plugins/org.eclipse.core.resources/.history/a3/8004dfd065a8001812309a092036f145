	private static void Subtraction(int n1, int n2)
	{
		int a, b, da, db, sum=0, power=1, borrow=0, digit;
		
		a = n1;
		b = n2;
		while((a!=0) || (b!=0))
		{
			da = a % 10;
			db = b % 10;
			a = a / 10;
			b = b / 10;
			da = da + borrow;
			
			if(da < db)
			{
				borrow = -1;
				da += 8;
			}
			else
			{
				borrow = 0;
			}
			
			digit = da - db;
			sum += digit * power;
			power = power * 10;
		}
		
		System.out.print("Difference = " + sum);
	}

}
